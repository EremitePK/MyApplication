<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        tools:context=".MovieDetailsActivity">

        <ImageView
            android:id="@+id/poster_image_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/main_gradient_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/orig" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_menu_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="44dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/top_menu_bottom_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/top_menu_top_guideline"
            app:srcCompat="@drawable/ic_path" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/back"
            android:textColor="@color/whiteb"
            app:layout_constraintBottom_toTopOf="@+id/top_menu_bottom_guideline"
            app:layout_constraintStart_toEndOf="@+id/back_image_view"
            app:layout_constraintTop_toTopOf="@+id/top_menu_top_guideline" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_menu_bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="84dp"
            app:layout_constraintTop_toTopOf="@id/top_menu_top_guideline" />

        <TextView
            android:id="@+id/age_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="142dp"
            android:text="@string/age"
            app:layout_constraintStart_toStartOf="@+id/main_indent_start_guideline"
            app:layout_constraintTop_toTopOf="@+id/top_menu_bottom_guideline" />

        <TextView
            android:id="@+id/movie_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:text="@string/movie_name"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="40sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/main_indent_end_guideline"
            app:layout_constraintStart_toStartOf="@+id/main_indent_start_guideline"
            app:layout_constraintTop_toTopOf="@+id/top_menu_bottom_guideline" />

        <TextView
            android:id="@+id/movie_genre_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/movie_ganr"
            android:textColor="@color/red"
            android:textColorLink="@color/red"
            app:layout_constraintEnd_toStartOf="@+id/main_indent_end_guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/main_indent_start_guideline"
            app:layout_constraintTop_toBottomOf="@+id/movie_name_text_view" />

        <RatingBar
            android:id="@+id/movie_rating_bar"
            style="@style/CustomRatingBar"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/movie_posts_text_view"
            app:layout_constraintStart_toStartOf="@+id/main_indent_start_guideline"
            app:layout_constraintTop_toTopOf="@+id/movie_posts_text_view" />

        <TextView
            android:id="@+id/movie_posts_text_view"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            android:text="@string/movie_reviews"
            android:textColor="@color/gray"
            android:textColorLink="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/movie_rating_bar"
            app:layout_constraintTop_toBottomOf="@+id/movie_genre_text_view" />

        <TextView
            android:id="@+id/head_story_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/storyline"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/main_indent_end_guideline"
            app:layout_constraintStart_toStartOf="@+id/main_indent_start_guideline"
            app:layout_constraintTop_toBottomOf="@+id/movie_posts_text_view" />

        <TextView
            android:id="@+id/movie_store_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:text="@string/storyline_text"
            android:textColor="@color/whiteb"
            android:textColorLink="@color/whiteb"
            app:layout_constraintBottom_toTopOf="@+id/actor_top_guideline"
            app:layout_constraintEnd_toStartOf="@+id/main_indent_end_guideline"
            app:layout_constraintStart_toStartOf="@+id/main_indent_start_guideline"
            app:layout_constraintTop_toBottomOf="@+id/head_story_text_view" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/actor_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="541dp" />

        <TextView
            android:id="@+id/head_actor_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cast"
            android:textColor="@color/whiteb"
            app:layout_constraintEnd_toStartOf="@+id/main_indent_end_guideline"
            app:layout_constraintStart_toStartOf="@+id/main_indent_start_guideline"
            app:layout_constraintTop_toTopOf="@+id/actor_top_guideline" />

        <ImageView
            android:id="@+id/actor_photo_1_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="7dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="@string/demension_ratio"
            app:layout_constraintEnd_toStartOf="@+id/actor_photo_2_image_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/main_indent_start_guideline"
            app:layout_constraintTop_toBottomOf="@+id/head_actor_text_view"
            app:srcCompat="@drawable/movie1" />

        <ImageView
            android:id="@+id/actor_photo_2_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/actor_photo_1_image_view"
            app:layout_constraintDimensionRatio="@string/demension_ratio"
            app:layout_constraintEnd_toStartOf="@+id/actor_photo_3_image_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/actor_photo_1_image_view"
            app:layout_constraintTop_toTopOf="@+id/actor_photo_1_image_view"
            app:srcCompat="@drawable/movie2" />

        <ImageView
            android:id="@+id/actor_photo_3_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="@string/demension_ratio"
            app:layout_constraintEnd_toStartOf="@+id/actor_photo_4_image_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/actor_photo_2_image_view"
            app:layout_constraintTop_toTopOf="@+id/actor_photo_1_image_view"
            app:srcCompat="@drawable/movie3" />

        <ImageView
            android:id="@+id/actor_photo_4_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/actor_photo_1_image_view"
            app:layout_constraintDimensionRatio="@string/demension_ratio"
            app:layout_constraintEnd_toStartOf="@+id/main_indent_end_guideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/actor_photo_3_image_view"
            app:layout_constraintTop_toTopOf="@+id/actor_photo_1_image_view"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/movie4" />

        <TextView
            android:id="@+id/actor_name_1_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/actorname1"
            android:textColor="@color/whiteb2"
            app:layout_constraintEnd_toEndOf="@+id/actor_photo_1_image_view"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/actor_photo_1_image_view"
            app:layout_constraintTop_toBottomOf="@+id/actor_photo_1_image_view" />

        <TextView
            android:id="@+id/actor_name_2_text_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/actorname2"
            android:textColor="@color/whiteb2"
            app:layout_constraintBottom_toBottomOf="@+id/actor_name_1_text_view"
            app:layout_constraintEnd_toEndOf="@+id/actor_photo_2_image_view"
            app:layout_constraintStart_toStartOf="@+id/actor_photo_2_image_view"
            app:layout_constraintTop_toTopOf="@+id/actor_name_1_text_view" />

        <TextView
            android:id="@+id/actor_name_3_text_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:text="@string/actorname3"
            android:textColor="@color/whiteb2"
            app:layout_constraintBottom_toBottomOf="@+id/actor_name_2_text_view"
            app:layout_constraintEnd_toEndOf="@+id/actor_photo_3_image_view"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/actor_photo_3_image_view"
            app:layout_constraintTop_toBottomOf="@+id/actor_photo_1_image_view" />

        <TextView
            android:id="@+id/actor_name_4_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/actorname4"
            android:textColor="@color/whiteb2"
            app:layout_constraintBottom_toBottomOf="@+id/actor_name_1_text_view"
            app:layout_constraintEnd_toEndOf="@+id/actor_photo_4_image_view"
            app:layout_constraintStart_toStartOf="@+id/actor_photo_4_image_view"
            app:layout_constraintTop_toTopOf="@+id/actor_name_1_text_view" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/main_indent_start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/main_indent_end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>