                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/movie_2_rating_bar"
                app:layout_constraintTop_toBottomOf="@+id/movie_genre_2_text_view" />

            <TextView
                android:id="@+id/movie_name_2_text_view"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/movie_2_name"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_posts_2_text_view" />

            <TextView
                android:id="@+id/movie_duration_2_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/movie_2_duration_text"
                android:textColor="#565665"
                android:textColorLink="#565665"
                android:textSize="8sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movie_name_2_text_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

